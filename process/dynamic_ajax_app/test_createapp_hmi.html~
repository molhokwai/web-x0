				    var queryString = $('#app_form').formSerialize();
				    var url='http://www.ajax-cross-domain.com/cgi-bin/ACD/ACD.js?uri=';
				    var post_uri='http://creator.zoho.com/api/json/molhokwai.zoho/target/add/';
